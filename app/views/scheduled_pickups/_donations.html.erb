<h2 class="section-label"><%= t(".header") %></h2>

<table>
  <thead>
    <tr>
      <th>
        <%= t(".columns.name") %>
      </th>
      <th>
        <%= t(".columns.address") %>
      </th>
      <th>
        <%= t(".columns.status", date: l(scheduled_pickup.start_at.to_date)) %>
      </th>
    </tr>
  </thead>
  <tbody>
    <%= render(
      partial: "scheduled_pickups/donation",
      collection: scheduled_pickup.donations.order(created_at: :asc).includes(:donor),
      as: :donation,
    ) %>
  </tbody>
</table>

<%= link_to(
  [@scheduled_pickup.zone, @scheduled_pickup, :checklist], class: "pickup-checklist-link"
) do %>
  <%= t(".checklist") %>
<% end %>
